            </Trigger>
            <Trigger Property="IsMouseCaptured" Value="True">
                <Setter Property="Foreground" Value="#F5F2EB"/>
                <Setter Property="Background" Value="#003239"/>
            </Trigger>
        </Style.Triggers>
    </Style>

